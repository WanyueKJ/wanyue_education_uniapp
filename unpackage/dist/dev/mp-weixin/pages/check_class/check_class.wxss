/********** 年级 **********/
.school {
	margin-bottom: 55rpx;
}
.school::after {
	display: block;
	clear: both;
	height: 0;
	content: "";
	visibility: hidden;
	overflow: hidden;
}
.school > view {
	float: left;
	font-size: 28rpx;
}
.school > view button {
	text-align: center;
	height: 70rpx;
	line-height: 70rpx;
	margin-bottom: 28rpx;
	background-color: #F5F5F5;
	border: none;
	-webkit-border-radius: 40rpx;
	        border-radius: 40rpx;
	font-size: 28rpx;
	color: #969696;
}
button::after{
	border: none;
}
.school > .one-vertical button {
	background-color: #FFFFFF;
	-webkit-border-radius: 0;
	        border-radius: 0;
	font-weight: bold;
}
.school > view.one-vertical {
	text-align: center;
	color: #000000;
	width: 180rpx;
	height: 70rpx;
	line-height: 70rpx;
}
.school .two-vertical {
	/* margin-right: 50rpx; */
	width: 480rpx;
}
.school .two-vertical button {
	width: 188rpx;
	float: left;
	margin-right: 50rpx;
}
.bg-click {
	background-color: #38E1AB !important;
	color: #FFFFFF !important;
}




